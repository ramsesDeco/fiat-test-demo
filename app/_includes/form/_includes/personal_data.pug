#personal_data
    +formTitle('Datos Personales', 'Escribe tus datos personales')

    .input-group
        .col-lg-4.col-md-4.col-sm-4.col-xs-12
            +inputCustomized('Nombre (s)', {type:'text', placeholder:'Ej. Juan'})
        .col-lg-4.col-md-4.col-sm-4.col-xs-12
            +inputCustomized('Apellido Paterno', {type:'text', placeholder:'Ej. López'})
        .col-lg-4.col-md-4.col-sm-4.col-xs-12
            +inputCustomized('Apellido Materno', {type:'text', placeholder:'Ej. Tovar'})


    .input-group

        .col-lg-4.col-md-4.col-sm-4.col-xs-12
            +inputCustomized('Email', {type:'email', placeholder:'Tu@email.com'})
        
        .col-lg-4.col-md-4.col-sm-4.col-xs-12
            +inputCustomized('Teléfono', {type:'number', placeholder:'0184443906'})

    .input-group
        .col-xs-12
            +radioCustomized(
                {label:'', nameControl: 'contact'},
                [{text:'Teléfono', value:1, icon: 'glyphicon glyphicon-earphone'},
                {text:'Email', value:2, icon: 'glyphicon glyphicon-envelope'},
                {text:'Ambos', value:3}])